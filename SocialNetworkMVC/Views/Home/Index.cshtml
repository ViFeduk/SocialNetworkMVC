@model SocialNetworkMVC.Models.User
@{
    ViewData["Title"] = "Home Page";
    var isAuthenticated = User.Identity.IsAuthenticated;
}


@if (isAuthenticated)
{
    <p> @User.Identity.Name</p>
    <a asp-controller="AccountManager" asp-action="MyPage">Мой профиль</a>
    <form method="post" asp-controller="AccountManager" asp-action="Logout">
        <input type="submit" value="Выход" />
    </form>
}
else
{
    <div class="row">
        <div class="side">
            <div class="center">
                Пользуйтесь нашей самой крутой соцсетью! Регистрируйтесь всего за 2 минуты, делитесь мыслями, находите новых друзей.
            </div>
            <img class="main-img" src="http://pngimg.com/uploads/husky/husky_PNG19.png" />
        </div>


        <div class="main">

            <partial name="Login" />

            <partial name="Register" />


        </div>

    </div>
}
