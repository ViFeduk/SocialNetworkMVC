@model SocialNetworkMVC.Views.ViewsModels.UserViewModel
@{
    ViewData["Title"] = "Users";
}
<body>
    <div class="profile-container">
        <div class="profile-card">
            <div class="profile-photo">
                <img src="@Model.User.Image" alt="Фото профиля">
                <button class="edit-button">Редактировать</button>
            </div>
            <div class="profile-info">
                <h1>@Model.User.GetFullName()</h1>
                <p><strong>Статус:</strong> @Model.User.Status !</p>
                <p><strong>Дата рождения:</strong> @Model.User.DateBirth г.</p>
                <p><strong>О себе:</strong> @Model.User.About</p>
                <p><strong>Email:</strong> @Model.User.Email</p>
                <p><strong>Список друзей</strong></p>
            </div>
        </div>
    </div>
</body>

